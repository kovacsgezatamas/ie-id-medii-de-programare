@page
@model kovacs_geza_tamas_project.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Car.ID" />

            <div class="form-group">
                <label asp-for="Car.LicensePlate" class="control-label"></label>
                <input asp-for="Car.LicensePlate" class="form-control" />
                <span asp-validation-for="Car.LicensePlate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.MakeId" class="control-label">Make</label>
                <select asp-for="Car.MakeId" class="form-control" asp-items="ViewBag.Makes"></select>
                <span asp-validation-for="Car.MakeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.ProductionYear" class="control-label"></label>
                <input asp-for="Car.ProductionYear" class="form-control" />
                <span asp-validation-for="Car.ProductionYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.Color" class="control-label"></label>
                <input asp-for="Car.Color" class="form-control" />
                <span asp-validation-for="Car.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.RentalPrice" class="control-label"></label>
                <input asp-for="Car.RentalPrice" class="form-control" />
                <span asp-validation-for="Car.RentalPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.NextInspectionDate" class="control-label"></label>
                <input asp-for="Car.NextInspectionDate" class="form-control" />
                <span asp-validation-for="Car.NextInspectionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fuel</label>
                <div class="table">
                    <table>
                        @foreach (var fuel in Model.AssignedFuelDataList)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               id="selectedFuel-@fuel.FuelId"
                                               type="checkbox"
                                               name="selectedFuels"
                                               value="@fuel.FuelId"
                                               @(Html.Raw(fuel.Assigned ? "checked=\"checked\"" : "")) />
                                        <label class="form-check-label" for="selectedFuel-@fuel.FuelId">
                                            @fuel.Type
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
